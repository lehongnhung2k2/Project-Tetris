<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nitc.TETRIS_GAME.view.screen">
   <children>
      <ImageView fx:id="imageView" fitHeight="600.0" fitWidth="450.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" AnchorPane.topAnchor="0.0">
         <image>
            <Image url="@../image/menu.png" />
         </image>
      </ImageView>
      <Button fx:id="clickPlay" layoutX="269.0" layoutY="353.0" mnemonicParsing="false" onAction="#goToGame" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: #262e31;">
         <font>
            <Font size="1.0" />
         </font>
         <graphic>
            <ImageView fx:id="imagePlay" fitHeight="44.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/play.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="clickHowToPlay" layoutX="249.0" layoutY="422.0" mnemonicParsing="false" onAction="#goToTutorial" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: #262e31;">
         <font>
            <Font size="1.0" />
         </font>
         <graphic>
            <ImageView fx:id="imageHowToPlay" fitHeight="58.0" fitWidth="156.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/howtoplay.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ImageView fx:id="imageTutorial" fitHeight="150.0" fitWidth="200.0" layoutX="202.0" layoutY="234.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/tutorial.png" />
         </image>
      </ImageView>
      <Button fx:id="clickDone" layoutX="274.0" layoutY="373.0" minHeight="17.0" minWidth="53.0" mnemonicParsing="false" onAction="#back" prefHeight="17.0" prefWidth="53.0" style="-fx-background-color: #262e31;">
         <font>
            <Font size="1.0" />
         </font>
         <graphic>
            <ImageView fx:id="imageDone" fitHeight="37.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/done.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
